#!/bin/sh
if [ ! -f "$1" ]
then
	echo "'$1' is not a file" >&2
	exit 1
fi

MIME="$(file --mime-type "$1")"
MIME="${MIME#*:\ }"
case "$MIME" in
	image/*)
		exec imv "$1"
		;;
	application/pdf)
		exec zathura "$1"
		;;
	text/html)
		exec firefox "$1"
		;;
	video/*|audio/*)
		exec mpv "$1"
		;;
	*)
		echo "Can't open '$1' ($MIME)"
		exit 1
		;;
esac
